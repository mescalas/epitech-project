{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class=" m-8 w-1/3 h-80 bg-gray-100 shadow-lg border rounded-lg">
        <div class="bg-gradient-to-b from-white to-gray-200 h-5 rounded-t-lg flex border-b">
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-red-600 border border-red-700"></div>
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-yellow-300 border border-yellow-400"></div>
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-green-500 border  border-green-600"></div>
        </div>
        <div class=" ml-1 mb-2 w-1/3 border-b border-black">
            <p class="text-xl font-bold">Admin Panel</p>
        </div>
        <div class="w-full h-4/5 ml-4">
            <form action="{{ path('edit', {id: user.id}) }}" method="post">
                <p> User ID : {{ user.id }}</p>
                <p> Pseudo : <input class="bg-gray-100 border border-gray-200" type="text" name="pseudo" value="{{ user.pseudo }}"></p>
                <p> Email : <input class="bg-gray-100 border border-gray-200"  type="email" name="email" value="{{ user.email }}"></p>
                <p> User Role : <select class="bg-gray-100 border border-gray-200"  name="roles">
                        {% if user.roles[0] == 'ROLE_USER' %}
                            <option value="ROLE_USER" selected>USER</option>
                            <option value="ROLE_ADMIN">ADMIN</option>
                        {% else %}
                            <option value="ROLE_USER">USER</option>
                            <option value="ROLE_ADMIN" selected>ADMIN</option>
                        {% endif %}
                    </select></p>
                <p> Activation Token : <input class="bg-gray-100 border border-gray-200"  name="activation_token" type="text" value="{{ user.activation_token }}"></p>
                <p> Created At : {{ user.created_at|date("d-m-Y H:i:s") }}</p>
                <p> Updated At : {{ user.updated_at|date("d-m-Y H:i:s") }}</p>
                <p> Last Time Connected : {{ user.last_time_connected|date("d-m-Y H:i:s") }}</p>
                <p>
                    <button class="mt-4 p-0.5 rounded-lg border border-gray-400 bg-gradient-to-b from-white to-gray-200 hover:from-blue-400 hover:to-blue-600 hover:text-white transition duration-500 hover:border-blue-600" type="submit">Confirm Changes</button>
                </p>
            </form>
        </div>
    </div>
{% endblock %}

