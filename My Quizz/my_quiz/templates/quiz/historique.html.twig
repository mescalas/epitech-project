{% extends 'base.html.twig' %}

{% block title %} Historique {% endblock %}

{% block body %}
    <div class=" m-8 w-11/12 h-80 bg-gray-100 shadow-lg border rounded-lg">
        <div class="bg-gradient-to-b from-white to-gray-200 h-5 rounded-t-lg flex border-b">
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-red-600 border border-red-700"></div>
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-yellow-300 border border-yellow-400"></div>
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-green-500 border  border-green-600"></div>
        </div>
        <div class=" ml-1 mb-2 w-52 border-b border-black">
            <p class="text-xl font-bold">Historique</p>
        </div>
        <div class="w-11/12 h-4/5 ml-4">
            <table class="table">
                <tr>
                    <th>Quiz</th>
                    <th>Score</th>
                </tr>

                {% if userHistorique is defined %}
                    {% for item in userHistorique %}
                        <tr>
                            <td>{{ item.quiz.name }}</td>
                            <td>{{ item.score }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}

                {% if guestHistorique is defined %}
                    {% for key, value in guestHistorique %}
                        <tr>
                            <td>{{ key }}</td>
                            <td>{{ value }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}

            </table>
        </div>
    </div>
{% endblock %}
