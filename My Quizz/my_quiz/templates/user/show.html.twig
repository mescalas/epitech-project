{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="flex">
        <div class=" m-8 w-5/12 h-full bg-gray-100 shadow-lg border rounded-lg">
            <div class="bg-gradient-to-b from-white to-gray-200 h-5 rounded-t-lg flex border-b">
                <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-red-600 border border-red-700"></div>
                <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-yellow-300 border border-yellow-400"></div>
                <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-green-500 border  border-green-600"></div>
            </div>
            <div class=" ml-1 mb-2 w-2/3 border-b border-black">
                <p class="text-xl font-bold">{{ user.pseudo }}'s Profile</p>
            </div>
            <div class=" h-4/5 ml-4 m-auto">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Pseudo</th>
                        <th>Email</th>
                        <th>Role</th>
                    </tr>
                    <tr>
                        <td class="pl-2">{{ user.pseudo }}</td>
                        <td class="pl-2">{{ user.email }}</td>
                        <td class="pl-2">{{ user.roles[0] }}</td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>
        <div class="m-auto">
            <div class=" m-6 w-32 h-20 bg-gray-100 shadow-lg border rounded-lg">
                <div class="bg-gradient-to-b from-white to-gray-200 h-5 rounded-t-lg flex border-b">
                    <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-red-600 border border-red-700"></div>
                    <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-yellow-300 border border-yellow-400"></div>
                    <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-green-500 border  border-green-600"></div>
                </div>
                <div class="align-center justify-center m-auto">
                    <a href="{{ path('default') }}">
                        <button class=" ml-7 mt-4 p-0.5 rounded-lg border border-gray-400 bg-gradient-to-b from-white to-gray-200" type="button">Go Back</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('email_edit', {'id': user.id}) }}">
        <button class="ml-7 p-1 rounded-lg border border-gray-400 bg-gradient-to-b from-white to-gray-200">Change email</button>
    </a>
    <a href="{{ path('pseudo_edit', {'id': user.id}) }}">
        <button class="ml-7 p-1 rounded-lg border border-gray-400 bg-gradient-to-b from-white to-gray-200">Change pseudo</button>
    </a>
    <a href="{{ path('password_change_form') }}">
        <button class="ml-7 p-1 rounded-lg border border-gray-400 bg-gradient-to-b from-white to-gray-200">Change my password</button>
    </a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
