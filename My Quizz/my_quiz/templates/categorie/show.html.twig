{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class=" m-12 w-11/12 h-11/12  bg-gray-100 shadow-lg border rounded-lg">
        <div class="bg-gradient-to-b from-white to-gray-200 h-5 rounded-t-lg flex border-b">
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-red-600 border border-red-700"></div>
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-yellow-300 border border-yellow-400"></div>
            <div class="mt-1 ml-1 w-3 h-3 rounded-full bg-green-500 border  border-green-600"></div>
        </div>
        <div class=" ml-1 mb-2 w-1/3 border-b border-black">
            <p class="text-xl font-bold">Categorie {{ categorie.name }}</p>
        </div>
        <div class="w-11/12 overflow-auto ml-4">
            {% for q in quiz %}
                <table class="table">
                    <tbody>
                    <tr>
                        <td>{{ q.name }}</td>
                    </tr>
                    </tbody>
                </table>

                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('categorie/_delete_form.html.twig') }}
                {% endif %}

            {% endfor %}


            <a href="{{ path('categorie_index') }}"><button class="p-1 mt-4 rounded-lg border border-gray-400 bg-gradient-to-b from-white to-gray-200">Back to list</button></a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><button class="p-1 mt-4 mb-2 rounded-lg border border-gray-400 bg-gradient-to-b from-white to-gray-200">Edit</button></a>
            {% endif %}
        </div>
    </div>

{% endblock %}
